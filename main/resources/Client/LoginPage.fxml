<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.PasswordField?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="Client.LoginPageController"
          alignment="CENTER"
          hgap="10"
          vgap="20" >
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
    <Label text="Account"
           GridPane.rowIndex="0"
           GridPane.columnIndex="0" />
    <Label text=":"
           GridPane.rowIndex="0"
           GridPane.columnIndex="1" />
    <TextField fx:id="account"
               GridPane.rowIndex="0"
               GridPane.columnIndex="2" />
    <Label text="Password"
           GridPane.rowIndex="1"
           GridPane.columnIndex="0" />
    <Label text=":"
           GridPane.rowIndex="1"
           GridPane.columnIndex="1" />
    <PasswordField fx:id="password"
               GridPane.rowIndex="1"
               GridPane.columnIndex="2" />
    <Label text="Ip"
           GridPane.rowIndex="2"
           GridPane.columnIndex="0" />
    <TextField fx:id="ip"
               GridPane.rowIndex="2"
               GridPane.columnIndex="2" />
    <Label text="Port"
           GridPane.rowIndex="2"
           GridPane.columnIndex="3" />
    <TextField fx:id="port"
               GridPane.columnSpan="2"
               GridPane.rowIndex="2"
               GridPane.columnIndex="4" />
    <Button fx:id="login"
            text="Login"
            defaultButton="true"
            GridPane.rowIndex="3"
            GridPane.columnIndex="4" />
    <Button fx:id="register"
            text="Register"
            GridPane.rowIndex="3"
            GridPane.columnIndex="5" />
    <Text fx:id="message"
          GridPane.rowIndex="4"
          GridPane.columnIndex="2"
          fill="firebrick" />
</GridPane>